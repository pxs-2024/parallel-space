generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  username     String    @unique
  email        String    @unique
  passwordHash String
  sessions     Session[]
}

model Session {
  id           String    @id @default(cuid())
  userId       String
  secretHash   Bytes
  createdAt    DateTime  @default(now())
  
  user         User      @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
}