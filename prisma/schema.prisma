generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String    @id @default(cuid())
  username     String    @unique
  email        String    @unique
  passwordHash String
  sessions     Session[]
  spaces       Space[]
}

model Session {
  id         String   @id @default(cuid())
  userId     String
  secretHash Bytes
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

enum SpaceItemType {
  asset
  container
}

enum SpaceLayoutMode {
  sort
  grid
}

model Space {
  id          String          @id @default(cuid())
  name        String
  description String
  layoutMode  SpaceLayoutMode @default(sort)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId String

  spaceItems SpaceItem[]

  @@index([userId])
  @@index([createdAt])
}

model SpaceItem {
  id          String        @id @default(cuid())
  name        String
  description String
  type        SpaceItemType
  orderIndex  Int           @default(0)
  gridRow     Int?
  gridCol     Int?
  spaceId     String
  containerId String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  isDeleted   Boolean       @default(false)

  space     Space      @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  container SpaceItem? @relation("ContainerAssets", fields: [containerId], references: [id], onDelete: Cascade)
  assets    SpaceItem[] @relation("ContainerAssets")

  @@index([spaceId, isDeleted])
  @@index([containerId, orderIndex, isDeleted])
  @@index([spaceId, type, isDeleted])
}
